global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy
defaults
    log     global
    mode    http
    option  forwardfor
    option  http-server-close
    retries 3
    option redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000
listen hbnb
    bind 0.0.0.0:443
    mode http
    stats enable
    stats uri /haproxy?stats
    balance roundrobin
    option httpclose
    option forwardfor
    server 39159-web-01 54.152.232.124:80 check
    server 39159-web-02 34.202.157.225:80 check
    option  forwardfor
    option  http-server-close

frontend www-http
    bind   100.25.24.215:80
    reqadd X-Forwarded-Proto:\ http
    default_backend www-backend

frontend www-https
    bind   100.25.24.215:443 ssl crt /etc/haproxy/certs/www.tsedal.tech.pem
    reqadd X-Forwarded-Proto:\ https
    acl letsencrypt-acl path_beg /.well-known/acme-challenge/
    use_backend letsencrypt-backend if letsencrypt-acl
    default_backend www-backend

backend www-backend
   redirect scheme https if !{ ssl_fc }
   server web-01 54.152.232.124:80 check
   server web-02 34.202.157.225:80 check

backend letsencrypt-backend
   server letsencrypt 127.0.0.1:54321
